<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="filmparrot.movil.informatica.myapplication.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#e4e4e4"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ethernet configuration"
            android:id="@+id/ethernetText"
            android:background="#828282"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="18dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/configurationLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/config1Layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Connection mode"
                    android:id="@+id/textView2"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/modeGroup">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DHCP"
                        android:checked="false"
                        android:id="@+id/dhcpRadio" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Static"
                        android:checked="false"
                        android:id="@+id/staticRadio" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Interface name"
                    android:id="@+id/textView3"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/nameText"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="IP address"
                    android:id="@+id/textView4"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/ipText"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="0.5"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/config2Layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Netmask address"
                    android:id="@+id/textView5"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/netmaskText"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="DNS1 address"
                    android:id="@+id/textView6"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/dns1Text"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="DNS2 address"
                    android:id="@+id/textView7"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/dns2Text"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gateway address"
                    android:id="@+id/textView8"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/gatewayText"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:id="@+id/apply_button"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_toStartOf="@+id/edit_button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:id="@+id/edit_button"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
