<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="filmparrot.movil.informatica.filmparrot">

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".PrincipalActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data android:name="android.app.default_searchable" android:value=".SearchActivity" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".profile.ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity android:name=".ElementViewActivity" />

        <activity android:name=".profile.NewElementActivity" />

        <activity
            android:name=".VoteActivity"
            android:label="VotaciÃ³n"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />

        <activity android:name=".SearchActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>

        <provider android:name=".auxiliar.SuggestionsProvider"
            android:authorities="filmparrot.movil.informatica.filmparrot.auxiliar.SuggestionsProvider" />
    </application>

</manifest>
