<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ef_name"
        android:id="@+id/nameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="text"
        android:id="@+id/nameText"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"

        android:background="#ffffff"
        android:layout_alignTop="@+id/nameLabel"
        android:layout_toEndOf="@+id/nameLabel"
        android:layout_toRightOf="@+id/nameLabel"

        android:singleLine="true"
        android:maxLength="40"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ef_country"
        android:id="@+id/countryLabel"
        android:layout_below="@+id/nameText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="text"
        android:layout_height="30dp"
        android:id="@+id/editText"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"

        android:background="#ffffff"
        android:layout_alignTop="@+id/countryLabel"
        android:layout_toEndOf="@+id/nameLabel"
        android:layout_toRightOf="@+id/nameLabel"

        android:singleLine="true"
        android:maxLength="15"
        android:textAlignment="center"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ef_description"
        android:id="@+id/descriptionLabel"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descriptionText"
        android:background="#ffffff"
        android:layout_below="@+id/descriptionLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"

        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="top|start"
        android:maxLength="200"
        android:hint="@string/ef_descriptionHint"
        android:minHeight="70dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:padding="5dp" />
    <RelativeLayout
        android:id="@+id/spec_element_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/elementType" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/ef_send"
        android:id="@+id/enviar_button"
        android:background="@android:color/holo_blue_dark"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/bsoLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/durationText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:maxLength="3"
        android:padding="5dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_alignTop="@+id/durationLabel"
        android:layout_alignLeft="@+id/startyearText"
        android:layout_alignStart="@+id/startyearText" />

    <TextView
        android:id="@+id/durationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/ff_duration"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/descriptionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/genreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"

        android:text="@string/ff_genre"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/durationLabel"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/genreLabel"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/yearLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ff_year"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/genre"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/producerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="@string/ff_producer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/yearLabel"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/bsoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ff_bso"
        android:layout_marginTop="10dp"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/producerLabel"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/startyearText"
        android:background="#ffffff"
        android:padding="5dp"
        android:maxLength="4"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_above="@+id/producerLabel"
        android:layout_alignLeft="@+id/producerText"
        android:layout_alignStart="@+id/producerText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/bsoText"
        android:background="#ffffff"
        android:padding="5dp"

        android:maxLength="20"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_alignTop="@+id/bsoLabel"
        android:layout_alignLeft="@+id/producerText"
        android:layout_alignStart="@+id/producerText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/producerText"
        android:background="#ffffff"
        android:padding="5dp"
        android:maxLength="20"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_alignTop="@+id/producerLabel"
        android:layout_toRightOf="@+id/descriptionLabel"
        android:layout_toEndOf="@+id/descriptionLabel" />
    </RelativeLayout>
</ScrollView>