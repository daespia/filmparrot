<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/durationText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/durationLabel"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/durationLabel"
        android:layout_toRightOf="@+id/durationLabel"
        android:background="#ffffff"
        android:maxLength="3"
        android:padding="5dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:inputType="number" />

    <TextView
        android:id="@+id/durationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="@string/ff_duration"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/genreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/durationLabel"
        android:layout_marginTop="18dp"
        android:text="@string/ff_genre"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/genreLabel" />

    <TextView
        android:id="@+id/yearLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ff_year"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/genreLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/producerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ff_producer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/yearText"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/bsoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ff_bso"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/producerText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/yearText"
        android:background="#ffffff"
        android:padding="5dp"
        android:maxLength="4"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/durationLabel"
        android:layout_toEndOf="@+id/durationLabel"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/yearLabel" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/bsoText"
        android:background="#ffffff"
        android:padding="5dp"
        android:maxLength="20"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_alignTop="@+id/bsoLabel"
        android:layout_toRightOf="@+id/durationLabel"
        android:layout_toEndOf="@+id/durationLabel"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/producerText"
        android:background="#ffffff"
        android:padding="5dp"
        android:maxLength="20"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_alignTop="@+id/producerLabel"
        android:layout_toRightOf="@+id/durationLabel"
        android:layout_toEndOf="@+id/durationLabel"
        android:layout_marginLeft="20dp" />

</RelativeLayout>
