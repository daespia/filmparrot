<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="filmparrot.movil.informatica.filmparrot.AllReviewsActivity">

    <RelativeLayout
        android:id="@+id/elementLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/littleCoverImage"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/littlePointAverage"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:textSize="25sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/littlePointAverage"
            android:layout_toStartOf="@id/littlePointAverage"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/littleElementLabel"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/littleCoverImage"
            android:layout_toEndOf="@+id/littleCoverImage" />

        <TextView
            android:id="@+id/littleElementType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/littleCoverImage"
            android:layout_toEndOf="@+id/littleCoverImage"
            android:layout_marginTop="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="15sp"
            android:layout_below="@+id/littleElementLabel"
            android:background="@drawable/type_text_border" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow_gradient" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/no_reviews"
        android:contentDescription="@string/app_logo"
        android:id="@+id/no_reviews_image"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"
        android:visibility="gone" />
    <ListView
        android:id="@+id/reviewsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
