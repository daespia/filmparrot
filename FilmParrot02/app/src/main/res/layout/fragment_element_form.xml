<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ef_name"
        android:id="@+id/nameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:inputType="text"
        android:id="@+id/nameText"
        android:layout_marginStart="20dp"
        android:background="#ffffff"
        android:layout_alignTop="@+id/nameLabel"
        android:layout_toEndOf="@+id/nameLabel"
        android:singleLine="true"
        android:maxLength="40"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ef_country"
        android:id="@+id/countryLabel"
        android:layout_below="@+id/nameText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:inputType="text"
        android:layout_height="30dp"
        android:id="@+id/editText"
        android:layout_marginStart="20dp"
        android:background="#ffffff"
        android:layout_alignTop="@+id/countryLabel"
        android:layout_toEndOf="@+id/nameLabel"
        android:singleLine="true"
        android:maxLength="15"
        android:textAlignment="center"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ef_description"
        android:id="@+id/descriptionLabel"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descriptionText"
        android:background="#ffffff"
        android:layout_below="@+id/descriptionLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/editText"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="top|start"
        android:maxLength="200"
        android:hint="@string/ef_descriptionHint"
        android:minHeight="70dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:padding="5dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/elementType"
        android:orientation="horizontal"
        android:layout_below="@+id/descriptionText"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginTop="10dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_film"
            android:text="@string/ef_film"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_serie"
            android:text="@string/ef_serie"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_bso"
            android:text="@string/ef_bso"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_actor"
            android:text="@string/ef_actor"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_director"
            android:text="@string/ef_director"/>
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/spec_element_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/elementType"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/ef_send"
        android:id="@+id/enviar_button"
        android:background="@android:color/holo_blue_dark"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/spec_element_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginTop="37dp" />
    </RelativeLayout>
</ScrollView>
