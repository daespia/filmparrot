<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FilmViewFragment">

    <TextView
        android:id="@+id/compositorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/bf_compositor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/compositorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/compositorLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/compositorLabel"
        android:layout_marginTop="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:id="@+id/yearLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/compositorLabel"
        android:layout_marginTop="10dp"
        android:text="@string/bf_year"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/yearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/yearLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Desconocido"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>
