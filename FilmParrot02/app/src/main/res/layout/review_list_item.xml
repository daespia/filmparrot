<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/smallPointsText"
        android:text="(9.6)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="14sp"/>

    <RatingBar
        android:id="@+id/smallRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/smallPointsText"
        android:layout_toLeftOf="@id/smallPointsText"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:rating="2.5"
        android:numStars="5"
        android:stepSize="0.25"
        style="?android:attr/ratingBarStyleSmall"
        android:isIndicator="true"/>

    <TextView
        android:id="@+id/reviewTitle"
        android:layout_toLeftOf="@id/littlePointAverage"
        android:layout_toStartOf="@id/littlePointAverage"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/userReviewTitle"
        android:layout_marginTop="3dp"
        android:layout_below="@id/reviewTitle"
        android:layout_alignStart="@id/reviewTitle"
        android:layout_alignLeft="@id/reviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/reviewBodyText"
        android:layout_marginTop="15dp"
        android:text="Hola, esta es una crÃ­tica de prueba."
        android:layout_below="@id/userReviewTitle"
        android:layout_alignStart="@id/reviewTitle"
        android:layout_alignLeft="@id/reviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

</RelativeLayout>