<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FilmViewFragment">

    <TextView
        android:id="@+id/startLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/sf_startyear"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/startText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/startLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Desconocido"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/startLabel"
        android:layout_marginTop="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:id="@+id/endLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/startLabel"
        android:layout_marginTop="10dp"
        android:text="@string/sf_endyear"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/endText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/endLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Desconocido"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/endLabel"
        android:layout_marginTop="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:id="@+id/seasonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/endLabel"
        android:layout_marginTop="10dp"
        android:text="@string/sf_season"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/seasonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/seasonLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Desconocido"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/seasonLabel"
        android:layout_marginTop="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:id="@+id/chapterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/seasonLabel"
        android:layout_marginTop="10dp"
        android:text="@string/sf_chapter"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/chapterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chapterLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Desconocido"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/chapterLabel"
        android:layout_marginTop="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:id="@+id/bsoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/chapterLabel"
        android:layout_marginTop="10dp"
        android:text="@string/ff_bso"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bsoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bsoLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Desconocido"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bsoLabel"
        android:layout_marginTop="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:id="@+id/directorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bsoLabel"
        android:layout_marginTop="10dp"
        android:text="@string/ff_director"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/directorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/directorLabel"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/directorText"
        android:layout_marginTop="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:id="@+id/actorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/directorText"
        android:layout_marginTop="10dp"
        android:text="@string/ff_actor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/actorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/actorLabel"
        android:layout_marginTop="5dp"
        android:text="Desconocido"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>
