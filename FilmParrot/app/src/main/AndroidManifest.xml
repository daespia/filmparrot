<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manu.filmparrot">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FormActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ElementoActivity"
            android:label="@string/title_activity_elemento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BandaSonoraActivity"
            android:label="@string/title_activity_banda_sonora"
            android:parentActivityName=".ElementoActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.manu.filmparrot.ElementoActivity" />
        </activity>
        <activity
            android:name=".SerieActivity"
            android:label="@string/title_activity_serie"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonaActivity"
            android:label="@string/title_activity_persona"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
